{
  "compilerOptions": {
    "target": "ESNext", 
    "module": "commonjs",
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true, 
    "strict": true,
    "skipLibCheck": true, 
    "noEmit": true,
    "allowImportingTsExtensions": true
  },
  "include": [
    "./**/*.ts",
    "src/types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}